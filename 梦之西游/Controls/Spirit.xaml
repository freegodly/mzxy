<UserControl x:Class="梦之西游.Controls.Spirit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
        <StackPanel HorizontalAlignment="Center"  >
            <Rectangle x:Name="Life" Height="5" HorizontalAlignment="Left" Visibility="Collapsed" >
                <Rectangle.Fill>
                    <ImageBrush ImageSource="/梦之西游;component/Graphics/Windowskins/战斗血条.png" Stretch="UniformToFill" TileMode="None" />
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="Body" Stretch="Fill" Panel.ZIndex="0"/>
            <!--姓名-->
            <TextBlock x:Name="SName" FontSize="14"  Height="15"  TextAlignment="Center" />
        </StackPanel>
</UserControl>
